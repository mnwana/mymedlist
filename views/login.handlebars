<body>
<form class="login-form border border-primary rounded p-3 bg-light w-50 mb-3 m-auto">
  <div class="row mb-3">
    <label for="email-login" class="col-sm-4 col-form-label">email:</label>
    <div class="col-sm-8">
      <input type="text" placeholder="Your Email" id="email-login" class="form-control"/>
    </div>
  </div>

  <div class="row mb-3">
    <label for="password-login" class="col-sm-4 col-form-label">password:</label>
    <div class="col-sm-8">
      <input type="password" placeholder="Your Password" id="password-login" class="form-control"/>
    </div>
  </div>
  <div class="text-center">
    <button type="submit" class="btn btn-primary">login</button>
  </div>
</form>

<form class="signup-form border border-primary rounded p-3 bg-light w-50 mb-3 m-auto">
  <div class="row mb-3">
    <label for="username-signup" class="col-sm-4 col-form-label">username:</label>
    <div class="col-sm-8">
      <input type="text" placeholder='Your Name' id="username-signup" class="form-control"/>
    </div>
  </div>

  <div class="row mb-3">
    <label for="email-signup" class="col-sm-4 col-form-label">email:</label>
    <div class="col-sm-8">
    <input type="text" placeholder='Email Address' id="email-signup" class="form-control"/>
    </div>
  </div>

  <div class="row mb-3">
    <label for="password-signup" class="col-sm-4 col-form-label">password:</label>
    <div class="col-sm-8">
    <input type="password" placeholder='New Password' id="password-signup" class="form-control"/>
    </div>
  </div>

  <fieldset class="row mb-3">
  {{!-- <legend class="col-form-label col-sm-2 pt-0">Are you a patient or a provider?</legend> --}}
  <div class="col-sm-9 offset-4">
    <span class="radio-wrapper">
      <input type="radio" name="user-type" id="patient" />
      <label for="patient">Patient</label>
    </span>
    <span class="radio-wrapper">
      <input type="radio" name="user-type" id="provider" />
      <label for="provider">Provider</label>
    </span>
  </div>
  </fieldset>

  <div class="text-center">
    <button type="submit" class="btn btn-primary">sign up</button>
  </div>
</form>
</body>

<script src="/javascript/login.js"></script>