<form class="login-form">
  <div>
    <label for="email-login">email:</label>
    <input type="text" id="email-login" />
  </div>
  <div>
    <label for="password-login">password:</label>
    <input type="password" id="password-login" />
  </div>
  <div>
    <button type="submit">login</button>
  </div>
</form>

<form class="signup-form">
  <div class="row mb-3">
    <label for="username-signup" class="col-sm-2 col-form-label">username:</label>
    <div class="col-sm-8">
      <input type="text" placeholder='Your Name' id="username-signup" class="form-control"/>
    </div>
  </div>

  <div class="row mb-3">
    <label for="email-signup" class="col-sm-2 col-form-label">email:</label>
    <div class="col-sm-8">
    <input type="text" placeholder='Email Address' id="email-signup" class="form-control"/>
    </div>
  </div>

  <div class="row mb-3">
    <label for="password-signup" class="col-sm-2 col-form-label">password:</label>
    <div class="col-sm-8">
    <input type="password" placeholder='New Password' id="password-signup" class="form-control"/>
    </div>
  </div>

  <div>
    Are you a patient or a provider?
    <span class="radio-wrapper">
      <input type="radio" name="user-type" id="patient" />
      <label for="patient">Patient</label>
    </span>
    <span class="radio-wrapper">
      <input type="radio" name="user-type" id="provider" />
      <label for="provider">Provider</label>
    </span>
  </div>
  
  <div>
    <button type="submit">signup</button>
  </div>
</form>

<script src="/javascript/login.js"></script>